{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/applications/.+\\.yaml$/",
      "/system/.+\\.yaml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "k0sproject/k0s",
      "managerFilePatterns": [
        "/k0sctl.yaml/"
      ],
      "matchStrings": [
        "version: (?<currentValue>.*)"
      ]
    },
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "managerFilePatterns": [
        "/kustomization.yaml/"
      ],
      "matchStrings": [
        "https://github.com/(?<depName>.*/.*?)/releases/download/(?<currentValue>.*?)/"
      ]
    },
    {
      "customType": "regex",
      "datasourceTemplate": "github-tags",
      "managerFilePatterns": [
        "/kustomization.yaml/"
      ],
      "matchStrings": [
        "https://raw.githubusercontent.com/(?<depName>[^/]*/[^/]*)/(?<currentValue>.*?)/"
      ]
    },
    {
      "customType": "regex",
      "datasourceTemplate": "docker",
      "managerFilePatterns": [
        "/.*\\.yaml/"
      ],
      "matchStrings": [
        "#\\s?renovate: image=(?<depName>.*?)\\s+version:\\s?[\"']?(?<currentValue>[\\w+\\.\\-]*)[\"']?"
      ]
    }
  ],
  "packageRules": [
    {
      "groupName": "Mastodon",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/mastodon/mastodon",
        "ghcr.io/mastodon/mastodon-streaming"
      ]
    },
    {
      "groupName": "OpenTelemetry Collector Materia Distribution",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/rokoucha/otelcol/**"
      ]
    }
  ]
}
